<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1>Login!</h1>
        <form action="/login" method="POST" style="width: 45%">
            <div class="form-group">
                <input type="email" name="email" placeholder="Email" required autofocus>
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group" >
                    <button class="btn btn-primary btn-block" style="width: 30%">Login</button>
                </div>
        </form>
        <div>
            <p> Or</p>
            <a href="/register" class="btn btn-primary btn-large" style="width: 15%">Register</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>